<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  
  <Properties>
  	<Property name="basePath">./resources</Property>
  </Properties>

  <Appenders>
  
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  
  	<RollingFile name="File" fileName="${basePath}/debug.log" filePattern="${basePath}/debug-%d{yyyy-MM-dd}.log">
  		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
  		<SizeBasedTriggeringPolicy size="500"/> <!--  create another file when size exceeds 500kb -->
  	</RollingFile>
    
  </Appenders>
  
  <Loggers>
  
  	<!-- alpha.test01 only display error -->
    <!--  <Logger name="alpha.test01" level="error" additivity="false"> -->
      <!-- <AppenderRef ref="Console"/> -->
      <!--  <AppenderRef ref="File"/>
    </Logger> -->
    
    <!-- Root level="error" OR "trace" -->
    <Root level="trace">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
    
  </Loggers>
  
</Configuration>