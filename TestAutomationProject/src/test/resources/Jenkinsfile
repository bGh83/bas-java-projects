pipeline {
	agent any
	stages {
		stage ('Checkout') {
			steps {
				echo 'Code checkout' 
				script {
					def exists = fileExists 'TestAutomationProject'
					if (!exists){
						new File('TestAutomationProject').mkdir()
					}
					dir ('TestAutomationProject') {
						git url: 'http://localhost:3000/basil/MercuryTours.git'
					}
				}
			}
		}

		stage ('Sanity') {
			parallel {
				stage('Firefox') {
					steps {
						echo 'Run in Firefox'
						script {
							dir("TestAutomationProject") {
								try {
									bat 'mvn -f TestAutomationProject\\pom.xml clean test -Dcucumber.options="--tags @smoke01"'
								} catch (err) {} 
							}
						}
					}
				}

				stage('Chrome') {
					steps {
						echo 'Run in Chrome'
						script {
							dir("TestAutomationProject") {
								try {
									bat 'mvn -f TestAutomationProject\\pom.xml clean test -Dcucumber.options="--tags @smoke02"'
								} catch (err) {} 
							}
						}
					}
				}
			}
		}
		
		stage('Post') {
		
			steps {
			    echo 'Running post build actions'			    
			}

			post {
				success {
					echo 'Generate Report'
					dir("TestAutomationProject") {
						script {
							def ReportPath = "${pwd()}/target/cucumber-reports"
							def JSONPath = "${pwd()}/target/cucumber-reports/Cucumber.json"
							echo $JSONPath
							echo $ReportPath
							cucumber fileIncludePattern: '**/TestAutomationProject/target/cucumber-reports/Cucumber.json', sortingMethod: 'ALPHABETICAL'
						}
					}
				}
			}
		}
	}
}