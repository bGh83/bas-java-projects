pipeline {
	agent any
	stages {
		stage ('Checkout') {
			steps {
				echo 'Code checkout' 
				script {
					def exists = fileExists 'TestAutomationProject'
					if (!exists){
						new File('TestAutomationProject').mkdir()
					}
					dir ('TestAutomationProject') {
						git url: 'http://localhost:3000/basil/MercuryTours.git'
					}
				}
			}
		}

		stage ('Sanity') {
			parallel {
				stage('Firefox') {
					steps {
						echo 'Run in Firefox'
						script {
							dir("TestAutomationProject") {
								try {
									bat 'mvn -f TestAutomationProject\\pom.xml clean test -Dcucumber.options="--tags @smoke01" -Dcucumber.options=\"--plugin json:target/cucumber-firefox.json'
									cucumber fileIncludePattern: '**/cucumber-*.json', parallelTesting: true
								} catch (err) {} 
							}
						}
					}
				}

				stage('Chrome') {
					steps {
						echo 'Run in Chrome'
						script {
							dir("TestAutomationProject") {
								try {
									bat 'mvn -f TestAutomationProject\\pom.xml clean test -Dcucumber.options="--tags @smoke02" -Dcucumber.options=\"--plugin json:target/cucumber-chrome.json'
									cucumber fileIncludePattern: '**/cucumber-*.json', parallelTesting: true
								} catch (err) {} 
							}
						}
					}
				}
			}
		}		
	}
}